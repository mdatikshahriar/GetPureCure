<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_big_doctor_doctorBody_LinearLayout"
    android:orientation="horizontal"
    android:layout_width="350dp"
    android:layout_height="100dp"
    android:padding="5dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/item_big_doctor_doctorPhoto_CircularImageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="5"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:padding="5dp">

        <TextView
            android:id="@+id/item_big_doctor_doctorName_TextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Title"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:gravity="left"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/item_big_doctor_doctorSpecialties_TextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="Lorem Ipsum"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>
</LinearLayout>