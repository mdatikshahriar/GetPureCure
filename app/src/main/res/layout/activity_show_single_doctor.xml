<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patientPart.ShowSingleDoctorActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_show_single_doctor_NestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_gravity="center">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/activity_show_single_doctor_profilePhoto_CircularImageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_account"
                        android:layout_marginHorizontal="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:minWidth="200dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp">

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorName_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:textSize="25sp"
                            android:textColor="@color/colorBlack"
                            android:gravity="bottom"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorCategory_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textColor="@color/colorPrimary"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <Button
                                    android:id="@+id/activity_show_single_doctor_call_Button"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/ic_call"
                                    style="?android:attr/borderlessButtonStyle"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <Button
                                    android:id="@+id/activity_show_single_doctor_message_Button"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/ic_message"
                                    style="?android:attr/borderlessButtonStyle"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <Button
                                    android:id="@+id/activity_show_single_doctor_email_Button"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/ic_mail"
                                    style="?android:attr/borderlessButtonStyle"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/one_sided_border"
                        android:paddingBottom="5dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="About"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorAbout_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="N/A"
                            android:textColor="@color/colorAsh"
                            android:textSize="17sp"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/one_sided_border"
                        android:paddingBottom="5dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Category"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorCategory2_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="N/A"
                            android:textColor="@color/colorAsh"
                            android:textSize="17sp"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/one_sided_border"
                        android:paddingBottom="5dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="BMDC Code"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorBmdcCode_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="N/A"
                            android:textColor="@color/colorAsh"
                            android:textSize="17sp"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Degrees"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <LinearLayout
                            android:id="@+id/activity_show_single_doctor_doctorDegrees_LinearLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Info"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginHorizontal="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/one_sided_border"
                        android:paddingBottom="5dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Email"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorEmail_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="N/A"
                            android:textSize="17sp"
                            android:textColor="@color/colorAsh"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/one_sided_border"
                        android:paddingBottom="5dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Phone"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorPhone_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="N/A"
                            android:textSize="17sp"
                            android:textColor="@color/colorAsh"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/one_sided_border"
                        android:paddingBottom="5dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Chamber Address"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorChamberAddress_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="N/A"
                            android:textSize="17sp"
                            android:textColor="@color/colorAsh"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Visiting Time"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginHorizontal="5dp"/>

                        <TextView
                            android:id="@+id/activity_show_single_doctor_doctorVisitingTime_TextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="N/A"
                            android:textSize="17sp"
                            android:textColor="@color/colorAsh"
                            android:layout_marginHorizontal="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospitals"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginHorizontal="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/activity_show_single_doctor_ProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="350dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>