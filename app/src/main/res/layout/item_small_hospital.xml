<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginStart="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/item_small_hospital_hospitalBody_LinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_small_hospital_hospitalPhoto_ImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_small_hospital_hospitalName_TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_small_hospital_hospitalAddress_TextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Address"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>