<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_treatment_history_date_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 January, 2020"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/one_sided_border"
            android:paddingBottom="5dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Doctor Name"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="5dp"/>

            <TextView
                android:id="@+id/item_treatment_history_doctorName_TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="N/A"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/one_sided_border"
            android:paddingBottom="5dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diseases"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="5dp"/>

            <LinearLayout
                android:id="@+id/item_treatment_history_diseases_LinearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/one_sided_border"
            android:paddingBottom="5dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tests"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="5dp"/>

            <LinearLayout
                android:id="@+id/item_treatment_history_tests_LinearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medicines"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="5dp"/>

            <LinearLayout
                android:id="@+id/item_treatment_history_medicines_LinearLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

